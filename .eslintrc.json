// This comes from Copilot. It should configure the ESLint to show tyypescript errors
{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier",
    "plugin:@typescript-eslint/recommended" // TypeScript rules
  ],
  "parser": "@typescript-eslint/parser", // Specifies the ESLint parser
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true // Allows for the parsing of JSX
    }
  },
  "rules": {
    // "@typescript-eslint/explicit-module-boundary-types": "warn" // Warns when a React component or other function does not have explicit return type
  }
}
